<style>
  .cancel-btn{
    border-radius: 30px !important;

  }
</style>



{{> user/header}}


  <!-- Content Header (Page header) -->
  <section class="patient-dash">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">My Appointments</h1>
        </div><!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Appointments</li>
          </ol>
        </div><!-- /.col -->
      </div><!-- /.row -->
    </div><!-- /.container-fluid -->
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">

          <!-- /.card-header -->
          <div class="card-body p-3 table-responsive p-0">
            <div class="add-button d-flex justify-content-center">
              <a href="/" class="btn btn-primary mb-3 mr-3 btn-goback">Book an Appointment</a>
            </div>
            <table class="table table-hover text-nowrap" id="patientTable">
              <thead>
                <tr>
                  <th>Appointment No.</th>
                  <th>Doctor Name</th>
                  <th>Appointment Date</th>
                  <th>Appointment Time</th>
                  <th>Appointment Status</th>
                  {{!-- <th>Download</th> --}}
                  <th>Cancel</th>
                </tr>
              </thead>
              <tbody>
                {{#each appointData}}
                <tr>
                  <td>{{inc @index}}</td>
                  <td>{{this.doctorname}}</td>
                  <td>{{this.appointmentDate}}</td>
                  <td>{{this.appointmentTime}}</td>
                  <td >
                    <a class="badge badge-success text-light">{{this.status}}</a>
                  </td>
                  {{!-- <td>{{this.mobile}}</td> --}}

                  <td>
                    <a class="btn btn-danger cancel-btn" href="/delete-appointment/{{this._id}}"
                      onclick="return confirm('Are sure to delete {{this._id}} ?')">Cancel</a>
                  </td>

                </tr>
                {{/each}}

              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
    </div>
  </div>
  </section>


{{> user/footer}}

<script>
  $(document).ready(function () {
    $('#patientTable').DataTable();
  });
</script>